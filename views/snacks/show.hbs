<div class="container">
  <h1>{{ snack.name }}</h1>
  <a href="/snacks">Go to All Snacks</a>
  <hr>
  <div class="row">
    <div class="col-md-2">
      <img src="{{ snack.image_url }}"
        alt="{{ snack.name }}"
        class="poster">
    </div>
    <div class="col-md-6">
      <p>Name: {{ snack.name }}</p>
      <p>Rating: {{ snack.my_rating }}</p>
      <p>Review: {{ snack.review_description }}</p>
    </div>
  </div>
</div>
